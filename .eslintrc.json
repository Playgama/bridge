{
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "plugins": [
        "sort-class-members"
    ],
    "globals": {
        "PLUGIN_VERSION": true,
        "PLUGIN_NAME": true,
        "__TARGET_PLATFORM__": true
    },
    "env": {
        "browser": true
    },
    "ignorePatterns": [
        "dist//*"
    ],
    "parserOptions": {
        "ecmaVersion": 13
    },
    "rules": {
        "sort-class-members/sort-class-members": [
            "warn",
            {
                "order": [
                    "[public-getters]",
                    "[protected-properties]",
                    "[private-properties]",
                    "constructor",
                    "[public-methods]",
                    "[protected-methods]",
                    "[private-methods]"
                ],
                "groups": {
                    "public-getters": [
                        { "kind": "get", "name": "/^(?!_|#).+/" }
                    ],
                    "protected-properties": [
                        { "type": "property", "name": "/^_(?!_).+/" }
                    ],
                    "private-properties": [
                        { "type": "property", "name": "/^#.+/" }
                    ],
                    "public-methods": [
                        { "type": "method", "name": "/^(?!_|#).+/", "kind": "nonAccessor" }
                    ],
                    "protected-methods": [
                        { "type": "method", "name": "/^_(?!_).+/" }
                    ],
                    "private-methods": [
                        { "type": "method", "name": "/^#.+/" }
                    ]
                },
                "accessorPairPositioning": "getThenSet"
            }
        ],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            "warn",
            {
                "ignoreStrings": true,
                "ignoreComments": true,
                "ignoreRegExpLiterals": true,
                "ignoreTemplateLiterals": true,
                "code": 120
            }
        ],
        "semi": [
            "warn",
            "never"
        ],
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "import/prefer-default-export": "off",
        "import/no-extraneous-dependencies": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error",
                    "info"
                ]
            }
        ]
    }
}
